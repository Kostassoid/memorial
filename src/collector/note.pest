root       = _{ SOI ~ handle ~ span* ~ silent_eoi }
span       = _{ handle | attr | text }

handle_body = { (!("]") ~ ANY)+ }
handle     =  { "@[" ~ handle_body ~ "]" }

attr_key = { (!(":" | "}") ~ ANY)+ }
attr_value = { (!("}") ~ ANY)+ }
attr  =  { "{" ~ attr_key ~ ":" ~ attr_value ~ "}" }

text       =  { (!("{" | "@[") ~ ANY)+ }

WHITESPACE = _{ " " | "\t" | NEWLINE }

silent_eoi = _{ !ANY }